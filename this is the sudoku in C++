#include "stdafx.h"
#include <iostream>
using namespace std;

int casilla[6][6];
int count=1; 
int fila;
int columna;

void MenuInicio();
void Cuadro3();
void Cuadro4();
void Cuadro5();
void Cuadro6();

int _tmain(int argc, _TCHAR* argv[])
{


	MenuInicio();

	system("pause");
	return 0;
}

void MenuInicio()
{
	system("cls");

	char opcion;

	cout<<"Seleccione la dimensión del cuadro"<<endl
	    <<"(A) 3x3"<<endl
		<<"(B) 4x4"<<endl
		<<"(C) 5x5"<<endl
		<<"(D) 6x6"<<endl;

	cin>>opcion;

	switch(opcion)
	{
	case'a': case'A':
		Cuadro3();
		break;

	case'b': case'B':
		Cuadro4();
		break;

	case'c': case'C':
		Cuadro5();
		break;

	case'd': case'D':
		Cuadro6();
		break;
	}

}

void Cuadro3()
{
	system("cls");


	cout<<"__________________________________"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|__________|__________|__________|"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|__________|__________|__________|"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|__________|__________|__________|"<<endl;

	cout<<"Ingresa los valores de las casillas"<<endl;

	for (int i=0; i<3; i++)
		for (int j=0; j<3; j++)
		{
			cout<<"("<<i+1<<","<<j+1<<"):";
				cin>>casilla[i][j];
		}

	cout<<"__________________________________"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|     "<<casilla[0][0]<<"    |     "<<casilla[0][1]<<"    |     "<<casilla[0][2]<<"    |"<<endl
		<<"|          |          |          |"<<endl
		<<"|__________|__________|__________|"<<endl
		<<"|          |          |          |"<<endl
		<<"|          |          |          |"<<endl
		<<"|     "<<casilla[1][0]<<"    |     "<<casilla[1][1]<<"    |     "<<casilla[1][2]<<"    |"<<endl
		<<"|          |          |          |"<<endl
		<<"|__________|__________|__________|"<<endl
